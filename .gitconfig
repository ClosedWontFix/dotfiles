[core]
  editor = "if [[ -f /usr/bin/nvim ]]; then EDITOR='nvim'; elif [[ -f /usr/bin/vim ]]; then EDITOR='vim'; else EDITOR='vi'; fi; $EDITOR"
	pager = LESSCHARSET=UTF-8 less -R
[init]
	defaultBranch = master
[push]
	autoSetupRemote = true
[include]
    # Define default commit email address
    path = ~/.gitconfig-default

[includeIf "gitdir:~/work/"]
    # Define secondary commit email address when in a git dir in ~/work/
    path = ~/.gitconfig-work
