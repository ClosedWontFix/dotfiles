# -*- conf -*-
# vim: ft=dosini
#
# File: ~/.editorconfig
# Author: Dan Borkowski
#

# --- Top-level EditorConfig file ---
root = true

# --- Default settings for all files ---
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# --- POSIX shell scripts ---
[*.sh]
indent_style = space
indent_size = 2

# --- YAML (e.g. Ansible, Kubernetes) ---
[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

# --- JSON ---
[*.json]
indent_style = space
indent_size = 2

# --- Makefiles must use tabs ---
[Makefile]
indent_style = tab
indent_size = 8

# --- Markdown (don’t strip trailing spaces — needed for line breaks) ---
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# --- Python (PEP 8: 4 spaces) ---
[*.py]
indent_style = space
indent_size  = 4

# --- Perl (common: 4 spaces, no tabs) ---
[*.pl]
indent_style = space
indent_size  = 4
[*.pm]
indent_style = space
indent_size  = 4
[*.t]
indent_style = space
indent_size  = 4

# --- Dockerfile (4 spaces; match both "Dockerfile" and "*.Dockerfile") ---
[Dockerfile]
indent_style = space
indent_size  = 4
[*.Dockerfile]
indent_style = space
indent_size  = 4

# --- docker-compose (YAML: 2 spaces) ---
[docker-compose.yml]
indent_style = space
indent_size  = 2
[docker-compose.yaml]
indent_style = space
indent_size  = 2
[compose.yml]
indent_style = space
indent_size  = 2
[compose.yaml]
indent_style = space
indent_size  = 2
